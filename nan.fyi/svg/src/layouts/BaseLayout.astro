---
import '@fontsource/urbanist';
import "@/styles/global.css"
import { ViewTransitions } from "astro:transitions"

interface Props {
  frontmatter?: Record<string, string>
  title?: string
  description?: string
}

const {
  frontmatter,
  title = frontmatter?.title,
  description = frontmatter?.description,
} = Astro.props
---

<html lang="en" class="font-sans">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <ViewTransitions transition:animate="none" />
  </head>
  <body class="flex flex-col items-center overflow-y-scroll bg-background min-h-dvh">
    <main class="flex flex-row items-center justify-center w-full container-page">
      <div class="container px-4 md:px-6 flex-1 pt-6 pb-20 items-start md:grid lg:grid-cols-[240px_minmax(0,1fr)] lg:gap-10">
        <div><!-- sub nav --></div>
        <div class="relative lg:grid grid-cols-full">
          <div class="w-full min-w-0 mx-auto">
            <article>
              <slot />
            </article>
          </div>
        </div>
      </div>
    </main>
  </body>
</html>
